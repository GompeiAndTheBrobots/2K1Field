<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#0099cc"
              android:orientation="vertical"
              android:weightSum="1"
              tools:context=".FullscreenActivity">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.15"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/resume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Resume"/>

        <ToggleButton
            android:id="@+id/toggleField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Toggle Field"
            android:textOff="No Field"
            android:textOn="Field"/>

        <Button
            android:id="@+id/stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="STOP"/>

        <RadioButton
            android:id="@+id/heartbeatIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView"
            android:background="@color/green"
            />

    </LinearLayout>

    <GridLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.45"
        android:columnCount="4"
        android:rowCount="2"
        android:useDefaultMargins="true">

        <ToggleButton
            android:id="@+id/Supply4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:enabled="false"
            android:text="Supply 4"
            android:textOff="4: Empty"
            android:textOn="4: Full"/>

        <ToggleButton
            android:id="@+id/Supply3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:enabled="false"
            android:text="Supply 3"
            android:textOff="3: Empty"
            android:textOn="3: Full"/>

        <ToggleButton
            android:id="@+id/Supply2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:enabled="false"
            android:text="Supply 2"
            android:textOff="2: Empty"
            android:textOn="2: Full"/>

        <ToggleButton
            android:id="@+id/Supply1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:enabled="false"
            android:text="Supply 1"
            android:textOff="1: Empty"
            android:textOn="1: Full"/>

        <ToggleButton
            android:id="@+id/Storage4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:enabled="false"
            android:text="Storage 4"
            android:textOff="4: Empty"
            android:textOn="4: Full"/>

        <ToggleButton
            android:id="@+id/Storage3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:enabled="false"
            android:text="Storage 3"
            android:textOff="3: Empty"
            android:textOn="3: Full"/>

        <ToggleButton
            android:id="@+id/Storage2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:enabled="false"
            android:text="Storage 2"
            android:textOff="2: Empty"
            android:textOn="2: Full"/>

        <ToggleButton
            android:id="@+id/Storage1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:enabled="false"
            android:text="Storage 1"
            android:textOff="1: Empty"
            android:textOn="1: Full"/>

    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.45"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_column="0"
            android:layout_weight="0.5"
            android:padding="20dp"
            android:text="Status information"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:padding="20dp"
            android:text="Debug Information"/>
    </LinearLayout>

</LinearLayout>
