<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#0099cc"
              android:orientation="vertical"
              android:weightSum="1"
              tools:context=".FullscreenActivity">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:layout_weight="0.15"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/resume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Resume"/>

        <Button
            android:id="@+id/stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="STOP"/>

        <RadioButton
            android:id="@+id/heartbeatIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/radiationIndicator"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@color/black"
            />

    </LinearLayout>

    <GridLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.22"
        android:columnCount="4"
        android:rowCount="2"
        android:useDefaultMargins="true"
        >

        <ToggleButton
            android:id="@+id/Supply4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Supply 4"
            android:textOff="4: Empty"
            android:textOn="4: Full"/>

        <ToggleButton
            android:id="@+id/Supply3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Supply 3"
            android:textOff="3: Empty"
            android:textOn="3: Full"/>

        <ToggleButton
            android:id="@+id/Supply2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Supply 2"
            android:textOff="2: Empty"
            android:textOn="2: Full"/>

        <ToggleButton
            android:id="@+id/Supply1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Supply 1"
            android:textOff="1: Empty"
            android:textOn="1: Full"/>

        <ToggleButton
            android:id="@+id/Storage4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Storage 4"
            android:textOff="4: Empty"
            android:textOn="4: Full"/>

        <ToggleButton
            android:id="@+id/Storage3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Storage 3"
            android:textOff="3: Empty"
            android:textOn="3: Full"/>

        <ToggleButton
            android:id="@+id/Storage2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Storage 2"
            android:textOff="2: Empty"
            android:textOn="2: Full"/>

        <ToggleButton
            android:id="@+id/Storage1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Storage 1"
            android:textOff="1: Empty"
            android:textOn="1: Full"/>

    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.63"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:weightSum="1">

        <ScrollView
            android:id="@+id/statusView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.8"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/status"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:linksClickable="false"
                android:scrollIndicators="start|end"
                android:text="Status information"/>
        </ScrollView>

        <ScrollView
            android:id="@+id/debugView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.0"
            android:fillViewport="true"
            android:padding="20dp"
            android:scrollbars="vertical">

            <TextView
                android:id="@+id/debug"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:linksClickable="true"
                android:layout_gravity="bottom"
                android:text="Debug Information"/>
        </ScrollView>

        <Button
            android:id="@+id/resetButton"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:layout_weight="0.2"
            android:padding="20dp"
            android:text="Reset Bluetooth"/>
    </LinearLayout>

</LinearLayout>
